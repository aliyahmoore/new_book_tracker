<div class="container">
  <h1><%= @book_club.name %></h1>
  <p>Total Books: <%= @book_club.books.count %></p>


  <p><strong>Description:</strong> <%= @book_club.description %></p>

<p><strong>Books In This Club:</strong></p>
<ul class="list-group list-unstyled">
  <% @book_club.books.each do |book| %>
    <li class="list-group-item">
      <%= book.title %><br>
      <strong>Author:</strong> <%= book.author %><br>
      <strong>Status:</strong> <%= book.status %><br>
    </li>
  <% end %>
</ul>

<div>
  <ul>
    <li>
      <%= link_to 'Edit Book Club', edit_book_club_path(@book_club), class: "btn btn-secondary w-30 mb-2" %>
    </li>
    <li>
      <%= link_to "Delete Book Club", book_path(@book_club), class: "btn btn-secondary w-30 mb-2" %>
    </li>
  </ul>
</div>
