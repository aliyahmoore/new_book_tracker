<h1><%= @book.title %></h1>

<p><%= @book.author %></p>
<p><%= @book.genre %></p>
<p><%= @book.notes %></p>
<p><%= @book.status %></p>
<p><%= @book.start_date %> - <%= @book.end_date %></p>

<ul>
  <li><%= link_to "Edit", edit_book_path(@book) %></li>
  <li><%= link_to "Destroy", book_path(@book), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li></ul>
