<head>
  <%= stylesheet_link_tag 'books', media: 'all' %>
</head>

<div class="container text-center" style="font-family: 'Newsreader', serif;">
  <h1>My Books</h1>

  <%= link_to "Add New Book", new_book_path, class: "btn btn-success mb-3" %>

  <p>Total Books: <%= @books.count %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% if @books.is_a?(Array) %> 
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.status %></td>
          </tr>
        <% end %>
      <% else %> 
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.status %></td>
            <td>
              <%= link_to 'Show', book_path(book), class: "btn btn-warning text-white" %> 
              <%= link_to 'Edit', edit_book_path(book), class: "btn btn-warning text-white"%>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
