<div class="container">
  
  <%= form_with(model: @book, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>

    <br>

    <div class="form-group">
      <%= form.label :author %>
      <%= form.text_field :author, class: "form-control", required: true %>
    </div>

    <br>

    <div>
      <%= form.label :genre %>
      <%= form.text_field :genre, class: "form-control", required: true %>
    </div>

    <br>

    <div>
      <%= form.label :start_date %>
      <%= form.date_field :start_date, class: 'form-control' %>
    </div>

    <br>

    <div>
      <%= form.label :end_date %>
      <%= form.date_field :end_date, class: 'form-control' %>
    </div>

    <br>

    <div>
      <%= form.label :notes %>
      <%= form.text_area :notes, class: 'form-control', rows: 3 %>
    </div>

    <br>

    <div>
      <%= form.label :status %>
      <%= form.select :status, options_for_select(['To Read', 'Reading', 'Completed']), { prompt: 'Select Status' }, class: 'custom-select', required: true %>
    </div>

    <br>

    <div class="form-group">
      <%= form.label :book_club_id, "Book Club (Optional)" %>
      <%= form.select :book_club_id, options_from_collection_for_select(@book_clubs, :id, :name, @book.book_club_id), include_blank: "No Book Club" %>
    </div><br>

    <br>

    <div>
      <%= form.submit "Save Book", class: "btn btn-success" %>
    </div>
    
  <% end %>
</div>
